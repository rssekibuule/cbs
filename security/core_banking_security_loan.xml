    <!-- Loan Record Rules -->
    <record id="loan_application_rule" model="ir.rule">
        <field name="name">Loan Application: branch users</field>
        <field name="model_id" ref="model_core_banking_loan_application"/>
        <field name="domain_force">[('branch_id', 'in', user.branch_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('group_core_banking_user'))]"/>
    </record>

    <record id="loan_application_manager_rule" model="ir.rule">
        <field name="name">Loan Application: manager</field>
        <field name="model_id" ref="model_core_banking_loan_application"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_core_banking_manager'))]"/>
    </record>

