<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Loan Product Access Rights -->
    <record id="loan_product_access" model="ir.model.access">
        <field name="name">core_banking.loan.product.access</field>
        <field name="model_id" ref="model_core_banking_loan_product"/>
        <field name="group_id" ref="group_core_banking_user"/>
        <field name="perm_read">1</field>
        <field name="perm_create">0</field>
        <field name="perm_write">0</field>
        <field name="perm_unlink">0</field>
    </record>

