<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Tree View -->
    <record id="view_account_tree" model="ir.ui.view">
        <field name="name">core_banking.account.tree</field>
        <field name="model">core_banking.account</field>
        <field name="arch" type="xml">
            <tree string="Accounts" decoration-success="balance >= 0" decoration-danger="balance < 0">
                <field name="account_number" string="Account #"/>
                <field name="name"/>
                <field name="customer_id" string="Customer"/>
                <field name="account_type_id"/>
                <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="available_balance" widget="monetary" options="{'currency_field': 'currency_id'}" string="Available"/>
                <field name="state" widget="statusbar"/>
            </tree>
        </field>
    </record>

    <!-- Account Form View -->
    <record id="view_account_form" model="ir.ui.view">
        <field name="name">core_banking.account.form</field>
        <field name="model">core_banking.account</field>
        <field name="arch" type="xml">
            <form string="Account">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,dormant,restricted,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_activate" string="Activate" type="object" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'draft')]}">
                            <field name="state" widget="statinfo" string="Activate"/>
                        </button>
                        <button name="action_freeze" string="Freeze" type="object" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'active')]}">
                            <field name="state" widget="statinfo" string="Freeze"/>
                        </button>
                        <button name="action_unfreeze" string="Unfreeze" type="object" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'restricted')]}">
                            <field name="state" widget="statinfo" string="Unfreeze"/>
                        </button>
                        <button name="action_mark_dormant" string="Mark Dormant" type="object" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'active')]}">
                            <field name="state" widget="statinfo" string="Mark Dormant"/>
                        </button>
                        <button name="action_close" string="Close" type="object" class="oe_stat_button" attrs="{'invisible': [('state', '!=', 'active')]}">
                            <field name="state" widget="statinfo" string="Close"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h2>
                            <field name="account_number" string="Account #" class="text-muted"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" options="{'no_open': True}"/>
                            <field name="account_type_id"/>
                            <field name="currency_id" options="{'no_open': True}"/>
                            <field name="branch_id"/>
                            <field name="account_officer_id"/>
                        </group>
                        <group>
                            <div class="o_row">
                                <field name="balance" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="available_balance" class="oe_inline" widget="monetary" options="{'currency_field': 'currency_id'}" string="Available"/>
                            </div>
                            <field name="hold_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="overdraft_limit" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': [('allow_overdraft', '=', False)]}"/>
                            <field name="allow_overdraft"/>
                            <field name="last_transaction_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transactions">
                            <field name="transaction_ids" context="{'default_account_id': active_id}">
                                <tree>
                                    <field name="transaction_date"/>
                                    <field name="transaction_type"/>
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="balance" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="reference"/>
                                    <field name="state" widget="statusbar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Standing Orders">
                            <field name="standing_order_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="frequency"/>
                                    <field name="next_execution_date"/>
                                    <field name="state" widget="statusbar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Account Details">
                            <group>
                                <group>
                                    <field name="interest_rate" attrs="{'invisible': [('interest_rate', '=', 0)]}"/>
                                    <field name="interest_calculation" attrs="{'invisible': [('interest_rate', '=', 0)]}"/>
                                    <field name="statement_delivery"/>
                                </group>
                                <group>
                                    <field name="created_by" options="{'no_open': True}" readonly="1"/>
                                    <field name="created_date" readonly="1"/>
                                    <field name="activated_date" readonly="1"/>
                                    <field name="closed_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Account Search View -->
    <record id="view_account_search" model="ir.ui.view">
        <field name="name">core_banking.account.search</field>
        <field name="model">core_banking.account</field>
        <field name="arch" type="xml">
            <search string="Account">
                <field name="account_number"/>
                <field name="name"/>
                <field name="customer_id"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Dormant" name="dormant" domain="[('state', '=', 'dormant')]"/>
                <filter string="Overdrawn" name="overdrawn" domain="[('balance', '&lt;', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Account Type" name="group_account_type" context="{'group_by':'account_type_id'}"/>
                    <filter string="Branch" name="group_branch" context="{'group_by':'branch_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Account Dashboard View -->
    <record id="view_account_dashboard" model="ir.ui.view">
        <field name="name">core_banking.account.dashboard</field>
        <field name="model">core_banking.account</field>
        <field name="arch" type="xml">
            <dashboard>
                <view type="search" ref="view_account_search"/>
                <group>
                    <group>
                        <div class="o_kanban_view o_kanban_dashboard o_account_kanban">
                            <t t-foreach="['active', 'dormant', 'restricted', 'closed']" t-as="state">
                                <div class="oe_kanban_global_click o_kanban_group" t-att-data-id="state">
                                    <div class="o_kanban_header">
                                        <span class="o_kanban_header_title">
                                            <t t-esc="state"/>
                                        </span>
                                        <div class="o_kanban_counter">
                                            <div class="o_kanban_counter_side">
                                                <span class="o_kanban_counter_number" t-esc="search_count([('state', '=', state)])"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </group>
                </group>
                <group>
                    <group>
                        <div class="o_kanban_view o_kanban_dashboard o_account_kanban">
                            <t t-foreach="['deposit', 'withdrawal', 'transfer']" t-as="t_type">
                                <div class="oe_kanban_global_click o_kanban_group" t-att-data-id="t_type">
                                    <div class="o_kanban_header">
                                        <span class="o_kanban_header_title">
                                            <t t-esc="t_type"/>
                                        </span>
                                        <div class="o_kanban_counter">
                                            <div class="o_kanban_counter_side">
                                                <span class="o_kanban_counter_number">
                                                    <t t-esc="search_count([('transaction_ids.transaction_type', '=', t_type)])"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </group>
                </group>
            </dashboard>
        </field>
    </record>

    <!-- Account Action -->
    <record id="action_account" model="ir.actions.act_window">
        <field name="name">Accounts</field>
        <field name="res_model">core_banking.account</field>
        <field name="view_mode">dashboard,tree,form,kanban,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first account
            </p>
        </field>
    </record>

    <!-- Account Menu -->
    <menuitem id="menu_account_root" name="Accounts" sequence="20"/>
    <menuitem id="menu_account" name="Accounts" parent="menu_account_root" action="action_account" sequence="10"/>
</odoo>
